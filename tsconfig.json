{
  "compilerOptions": {
    // Enable latest features
    "lib": [
      "ESNext",
      "DOM",
      "dom.iterable"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "importHelpers": false,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
  },
  "include": [
    // "src/untracked/**/*.ts",
    "src/components/ui/*.ts",
    "src/components/layouts/*.ts",
    "src/components/tools/*.ts",
    "src/index.ts"
  ],
  "exclude": []
}
