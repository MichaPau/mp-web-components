{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM", "dom.iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": false,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "importHelpers": false,
    "outDir": "./lib/dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": false,
    "plugins": [{ "name": "ts-lit-plugin" }],
  },
  "include": ["src/lit/components/ui/*.ts", "src/lit/components/layouts/*.ts", "src/index.ts"],
  "exclude": []

}
